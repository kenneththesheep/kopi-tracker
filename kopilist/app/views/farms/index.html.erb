<h1>Kopi Data</h1>


<h2>Farms</h2>
  <% @farms.each do |farm| %>

      <p><%= farm.location %></p>
      <p><%= link_to 'Show', farm_path(farm) %></p>
      <p><%= link_to 'Edit', edit_farm_path(farm) %></p>
      <p><td><%= link_to 'Destroy', farm_path(farm),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td></p>
  <% end %>


<h2>Kopi</h2>
  <% @kopis.each do |kopi| %>

      <p><%= kopi.name %></p>
      <p><%= link_to 'Show', kopi_path(kopi) %></p>
            <p><%= link_to 'Edit', edit_kopi_path(kopi) %></p>
      <p><td><%= link_to 'Destroy', kopi_path(kopi),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td></p>
  <% end %>

<h2>Roast</h2>
  <% @roasts.each do |roast| %>

      <p><%= roast.roast_name %></p>
      <p><%= link_to 'Show', roast_path(roast) %></p>
  <% end %>


  <h2>Order</h2>
  <% @orders.each do |order| %>

      <p>Order: <%= order.id %></p>
      <p><%= link_to 'Show', order_path(order) %></p>
  <% end %>





